<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/displayedValuesCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/displayedValuesCardTitle"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/displayedValuesCardTitle"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DADBDC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maxRPMDisplayedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/maxRPMDisplayedTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/maxRPMDisplayedNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="maxRPMDisplayedNumber"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/maxHeightDisplayedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/maxHeightDisplayedTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/maxHeightDisplayedNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="maxHeightDisplayedNumber"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/optimalRPMRangeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/optimalRPMRangeTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/optimalRPMRangeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plusMinusSign03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plusMinusSign"
                    android:layout_marginEnd="10dp"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/optimalRPMRangeNumber"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:autofillHints="optimalRPMRangeNumber"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/numberHint"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/optimalHeightRangeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/optimalHeightRangeTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/optimalHeightRangeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plusMinusSign04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/plusMinusSign"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/optimalHeightRangeNumber"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:autofillHints="optimalHeightRangeNumber"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/numberHint"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/connectedSensorTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/connectedSensorTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/connectedSensorsSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white"
                android:entries="@array/connectedSensors"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
