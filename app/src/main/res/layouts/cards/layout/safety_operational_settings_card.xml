<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/displayedValuesCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/safetyParametersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/safetyValueTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/maxRakeRPMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/maxRakeRPMTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/maxRakeRPMNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="minRakeRPMNumber"
                android:background="@drawable/edit_text_normal"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/minHeightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/minRakeHeightTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/minHeightNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="minHeightDisplayedNumber"
                android:background="@drawable/edit_text_normal"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/optimizationParametersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/optimizationValueTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/coefficientRPMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/coefficientRPMTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/coefficientRPMNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="coefficientRPMNumber"
                android:background="@drawable/edit_text_normal"
                android:ems="10"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/coefficientHeightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/coefficientHeightTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/coefficientHeightNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="coefficientHeightNumber"
                android:background="@drawable/edit_text_normal"
                android:ems="10"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

        </LinearLayout>

</androidx.cardview.widget.CardView>
