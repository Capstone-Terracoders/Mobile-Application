<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/displayedValuesCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <TextView
            android:id="@+id/configurationCardTitle"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/safetyOperationalSettingsCardTitle"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DADBDC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/safetyParametersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/safetyParametersTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/maxRakeRPMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/maxRakeRPMTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/minRakeRPMNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="minRakeRPMNumber"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/minHeightDisplayedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/minRakeHeightTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/minHeightDisplayedNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="minHeightDisplayedNumber"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center_horizontal"

                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/optimizationParametersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/optimizationParametersTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/coefficientRPMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/coefficientRPMTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/coefficientRPMNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="coefficientRPMNumber"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/coefficientHeightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/coefficientHeightTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/coefficientHeightNumber"
                android:layout_width="125dp"
                android:layout_height="48dp"
                android:autofillHints="coefficientHeightNumber"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:hint="@string/numberHint"
                android:inputType="number"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
