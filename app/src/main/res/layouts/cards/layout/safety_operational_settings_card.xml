<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/displayedValuesCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

    <TextView
            android:id="@+id/configurationCardTitle"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/safetyOperationalSettingsCardTitle"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DADBDC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/safetyParametersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/safetyParametersTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/minRakeRPMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/minRakeRPMTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/minRakeRPMLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plusMinusSign01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/plusMinusSign"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/minRakeRPMNumber"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:autofillHints="minRakeRPMNumber"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/numberHint"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/minHeightDisplayedTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/minRakeHeightTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/minHeightDisplayedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plusMinusSign02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/plusMinusSign"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/minHeightDisplayedNumber"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:autofillHints="minHeightDisplayedNumber"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/numberHint"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/optimizationParametersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/optimizationParametersTitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/coefficientRPMTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/coefficientRPMTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/coefficientRPMLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plusMinusSign03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/plusMinusSign"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/coefficientRPMNumber"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:autofillHints="coefficientRPMNumber"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/numberHint"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/coefficientHeightTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/coefficientHeightTitle"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/coefficientHeightLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plusMinusSign04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="@string/plusMinusSign"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/coefficientHeightNumber"
                    android:layout_width="125dp"
                    android:layout_height="48dp"
                    android:autofillHints="coefficientHeightNumber"
                    android:background="@color/white"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/numberHint"
                    android:inputType="number"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
