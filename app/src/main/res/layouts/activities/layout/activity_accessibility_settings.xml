<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Dummy anchor view for notification popup -->
    <View
        android:id="@+id/notificationAnchorView"
        android:layout_width="73dp"
        android:layout_height="121dp"
        android:layout_gravity="start"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:icon="@drawable/back_arrow_fill"
            app:iconGravity="start"
            app:iconTint="@color/black"
            tools:text="@string/homeButtonText"
            />

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:menu="@menu/toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title=" "
            app:titleMarginStart="30dp" />
    </LinearLayout>

        <TextView
            android:id="@+id/accessibilityPageTitle"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/accessibilityPageTitle"
            android:textColor="@color/black" />

        <include
            android:id="@+id/accessibilitySettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            layout="@layout/accessibility_settings_card"/>

    </LinearLayout>
</ScrollView>
