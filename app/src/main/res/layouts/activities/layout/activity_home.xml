<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/homeToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueGrey"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:logo="@drawable/record_circle"
        app:menu="@menu/home_menu"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="@string/recordTitle"
        app:titleMarginStart="30dp" />

    <!-- Horizontal LinearLayout containing Toolbar and Optimal Operation Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Optimal Operation Card -->
        <include layout="@layout/optimal_operation_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Spacer to separate the card from the toolbar -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>