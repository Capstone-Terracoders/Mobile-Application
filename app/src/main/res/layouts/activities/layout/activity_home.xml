<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Dummy anchor view for notification popup -->
    <View
        android:id="@+id/notificationAnchorView"
        android:layout_width="73dp"
        android:layout_height="121dp"
        android:layout_gravity="right"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green">

        <Button
            android:id="@+id/recordButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            app:icon="@drawable/record_circle"
            app:iconGravity="start"
            app:iconTint="@color/black"
            tools:text="@string/recordTitle"
            />

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/homeToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:menu="@menu/home_menu"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title=" "
            app:titleMarginStart="30dp" />
    </LinearLayout>

    <!-- Horizontal LinearLayout containing Toolbar and Optimal Operation Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Optimal Operation Card -->
        <include
            layout="@layout/optimal_operation_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Spacer to separate the card from the toolbar -->
        <View
            android:layout_width="16dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>